= form_for @home, html: { class: "form-horizontal", role: "form" } do |f|
  -if @home.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@home.errors.count, "error")} prohibited this home from being saved:"

      %ul
        - @home.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :address, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :address, class: 'form-control'
  .form-group
    = f.label :price, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :price, class: 'form-control'
  .form-group
    = f.label :agent, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :agent, class: 'form-control'
  .form-group
    = f.label :description, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :description, class: 'form-control'
  .form-group
    = f.label :space, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :space, class: 'form-control'
  .form-group
    = f.label :parking, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :parking, class: 'form-control'
  .form-group
    = f.label :bedrooms, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :bedrooms, class: 'form-control'
  .form-group
    = f.label :bathrooms, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :bathrooms, class: 'form-control'
  .form-group
    = f.label :house_image, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.attachment_field :house_image
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
